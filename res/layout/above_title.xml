<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="@dimen/title_gb_height"
    android:background="@color/title_bg_color" >

    <!--
        <TextView
        android:id="@+id/title_tv"
        style="@style/activity_title_text"
        android:layout_centerInParent="true"
        android:text="新东方校区"/>
    -->

    <com.compass.widget.ScrollForeverTextView
        android:id="@+id/title_tv"
        style="@style/activity_title_text"
        android:layout_centerInParent="true"
        android:text="新东方校区" />

    <LinearLayout
        android:id="@+id/Linear_above_toHome"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_margin="5dp"
        android:gravity="center"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/btn_back"
            style="@style/title_right_button"
            android:layout_width="50dp"
        	android:layout_height="fill_parent"
            android:padding="8dp"
            android:src="@drawable/left_arrow" />
       

        <TextView
            android:id="@+id/tv_above_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#fff"
            android:visibility="gone" />
    </LinearLayout>
    

    <ImageView
        android:id="@+id/imageview_above_query"
        style="@style/title_right_button"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignParentRight="true"
        android:src="@drawable/ico_add" />
    <!-- android:layout_marginRight="@dimen/title_height" -->


    <!-- titleBar空间问题，暂隐藏 -->

    <ImageView
        android:id="@+id/imageview_above_more"
        style="@style/title_right_button"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignParentRight="true"
        android:src="@drawable/button_title_more"
        android:visibility="gone" />

</RelativeLayout>