<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layout_head"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/translucent_background"
    android:orientation="vertical" >

    <!--
        <TextView
        android:id="@+id/layout_title_text"
        style="@style/layout_title_text"
        android:text="孩子头像" />
    -->

    <include
        android:layout_width="match_parent"
        layout="@layout/title_layout_view"
        android:visibility="invisible" />

    <TextView
        android:id="@+id/above_tv"
        style="@style/B4_Font_white"
        android:layout_width="fill_parent"
        android:layout_height="44.0dip"
        android:layout_gravity=""
        android:background="@drawable/common_strip_setting_middle"
        android:clickable="true"
        android:gravity="center"
        android:paddingLeft="10.0dip"
        android:paddingRight="10.0dip"
        android:text="拍照"
        android:visibility="gone" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/translucent_background"
        android:fillViewport="true"
        android:focusable="true"
        android:focusableInTouchMode="true" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@color/translucent_background"
            android:gravity="bottom"
            android:orientation="vertical"
            android:paddingLeft="0dip"
            android:paddingRight="0dip"
            android:paddingTop="10.0dip" >

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="@color/chat_background"
                android:gravity="bottom"
                android:orientation="vertical"
                android:paddingLeft="10.0dip"
                android:paddingRight="10.0dip"
                android:paddingTop="10.0dip" >

                <TextView
                    android:id="@+id/capture_tv"
                    style="@style/B4_Font_white"
                    android:layout_width="fill_parent"
                    android:layout_height="44.0dip"
                    android:background="@drawable/common_strip_setting_middle"
                    android:clickable="true"
                    android:drawableRight="@drawable/arrow_right_gray_white"
                    android:gravity="center"
                    android:paddingLeft="10.0dip"
                    android:paddingRight="10.0dip"
                    android:text="拍照" />

                <TextView
                    android:id="@+id/album_tv"
                    style="@style/B4_Font_white"
                    android:layout_width="fill_parent"
                    android:layout_height="44.0dip"
                    android:background="@drawable/common_strip_setting_bottom"
                    android:clickable="true"
                    android:drawableRight="@drawable/arrow_right_gray_white"
                    android:gravity="center"
                    android:paddingLeft="10.0dip"
                    android:paddingRight="10.0dip"
                    android:text="从相册中选择照片" />

                <Button
                    android:id="@+id/head_cancel_bn"
                    style="@style/BlueBtn"
                    android:layout_width="fill_parent"
                    android:layout_height="46.0dip"
                    android:layout_marginBottom="20.0dip"
                    android:layout_marginTop="15.0dip"
                    android:text="取                  消" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</LinearLayout>