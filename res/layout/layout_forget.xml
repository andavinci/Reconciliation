<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical" >

    <include
        android:layout_width="match_parent"
        layout="@layout/title_view" />

    <include layout="@layout/net_status_bar" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/coversation_bg"
        android:fillViewport="true"
        android:focusable="true"
        android:focusableInTouchMode="true" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@color/chat_background"
            android:orientation="vertical"
            android:paddingLeft="10.0dip"
            android:paddingRight="10.0dip"
            android:paddingTop="10.0dip" >

            <LinearLayout
                android:id="@+id/peasonInf_v"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="@color/chat_background"
                android:orientation="vertical" >

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="44.0dip"
                    android:background="@drawable/common_strip_setting_top"
                    android:clickable="false"
                    android:focusable="false"
                    android:gravity="center_vertical" >

                    <TextView
                        style="@style/inf_lable_Font"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="孩子姓名" />

                    <EditText
                        android:id="@+id/babyName_et"
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/edit_height"
                        android:layout_marginLeft="12dp"
                        android:ems="10"
                        android:gravity="center_vertical"
                        android:hint="     输入学生的真实姓名"
                        android:inputType="textPersonName"
                        android:maxLength="12"
                        android:singleLine="true"
                        android:textSize="@dimen/edit_size" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="44.0dip"
                    android:background="@drawable/common_strip_setting_top"
                    android:clickable="false"
                    android:focusable="false"
                    android:gravity="center_vertical" >

                    <TextView
                        style="@style/inf_lable_Font"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="联系电话" />

                    <EditText
                        android:id="@+id/teleph_et"
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/edit_height"
                        android:layout_marginLeft="12dp"
                        android:ems="10"
                        android:hint="     输入联系电话"
                        android:inputType="phone"
                        android:maxLength="15"
                        android:textSize="@dimen/edit_size" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/pushSetting"
                    android:layout_width="fill_parent"
                    android:layout_height="44.0dip"
                    android:background="@drawable/common_strip_setting_top"
                    android:clickable="false"
                    android:focusable="false"
                    android:gravity="center_vertical"
                    android:visibility="gone" >

                    <TextView
                        style="@style/inf_lable_Font"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="学校编码" />

                    <EditText
                        android:id="@+id/act_code_1_et"
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/edit_height"
                        android:layout_marginLeft="12dp"
                        android:ems="10"
                        android:hint="     输入第一学校的编码"
                        android:maxLength="12"
                        android:singleLine="true"
                        android:textSize="@dimen/edit_size" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="44.0dip"
                    android:background="@drawable/common_strip_setting_top"
                    android:clickable="false"
                    android:focusable="false"
                    android:gravity="center_vertical"
                    android:visibility="gone" >

                    <TextView
                        style="@style/inf_lable_Font"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="登录密码"
                        android:visibility="invisible" />

                    <EditText
                        android:id="@+id/act_code_2_et"
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/edit_height"
                        android:layout_marginLeft="12dp"
                        android:ems="10"
                        android:hint="  输入第一学校的编码"
                        android:inputType="textPassword"
                        android:maxLength="12"
                        android:singleLine="true"
                        android:textSize="@dimen/edit_size" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20.0dip"
                    android:gravity="left"
                    android:orientation="horizontal"
                    android:paddingTop="5dp" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/register_tip"
                        android:textColor="@color/button_unselected"
                        android:textSize="14.0sp" />
                </LinearLayout>

                <Button
                    android:id="@+id/finish_regist_bn"
                    style="@style/BlueBtn"
                    android:layout_width="fill_parent"
                    android:layout_height="46.0dip"
                    android:layout_marginBottom="20.0dip"
                    android:layout_marginTop="15.0dip"
                    android:text="下   一   步" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/schoolInf_v"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="@color/chat_background"
                android:orientation="vertical"
                android:visibility="gone" >

                <LinearLayout
                    android:id="@+id/pushSetting"
                    android:layout_width="fill_parent"
                    android:layout_height="44.0dip"
                    android:background="@drawable/common_strip_setting_top"
                    android:clickable="false"
                    android:divider="@null"
                    android:dividerHeight="0dip"
                    android:focusable="false"
                    android:gravity="center_vertical" >

                    <TextView
                        style="@style/inf_lable_Font"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="学校编码" />
                </LinearLayout>

                <com.compass.widget.ExpandListView
                    android:id="@+id/school_lv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:divider="@null"
                    android:dividerHeight="0dip" />

                <Button
                    android:id="@+id/finish_schoolInf_bn"
                    style="@style/BlueBtn"
                    android:layout_width="fill_parent"
                    android:layout_height="46.0dip"
                    android:layout_marginBottom="20.0dip"
                    android:layout_marginTop="15.0dip"
                    android:text="下   一   步" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</LinearLayout>