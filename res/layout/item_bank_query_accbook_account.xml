<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="fill_parent"
    android:background="@color/white" >

    <LinearLayout
        android:id="@+id/center"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <include
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp40"
            layout="@layout/layout_date_title"
            android:background="@color/grey_bg" />

        <LinearLayout
            android:id="@+id/teach_content_v"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:gravity="center_vertical"
            android:orientation="vertical" >

            <LinearLayout
                android:id="@+id/D31TXRMKS_V"
                style="@style/Padding_learning"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:paddingTop="6dp" >

                <TextView
                    android:id="@+id/D31TXRMKS_label_tv"
                    style="@style/Color2_12_Font"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="16dp"
                    android:singleLine="true"
                    android:text="摘要内容：" />

                <TextView
                    android:id="@+id/D31TXRMKS_tv"
                    style="@style/B12_Font"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="平定县娘子关生活垃圾" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/D31VOUN_v"
                style="@style/Padding_learning"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content" >

                <TextView
                    android:id="@+id/D31VOUN_label_tv"
                    style="@style/Color2_12_Font"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="16dp"
                    android:singleLine="true"
                    android:text="凭证号    ：" />

                <TextView
                    android:id="@+id/D31VOUN_tv"
                    style="@style/B12_Font"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="企业用户" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/D31ACCS_v"
                style="@style/Padding_learning"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content" >

                <TextView
                    android:id="@+id/D31ACCS_label_tv"
                    style="@style/Color2_12_Font"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="16dp"
                    android:singleLine="true"
                    android:text="借方发生额：" />

                <TextView
                    android:id="@+id/D31ACCSTv"
                    style="@style/B12_Font"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="17dp"
                    android:singleLine="true"
                    android:text="123456789123456789" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/D31AMT_v"
                style="@style/Padding_learning"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content" >

                <TextView
                    android:id="@+id/D31AMT_label_tv"
                    style="@style/Color2_12_Font"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="16dp"
                    android:singleLine="true"
                    android:text="贷方发生额：" />

                <TextView
                    android:id="@+id/D31AMT_tv"
                    style="@style/B12_Font"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="17dp"
                    android:singleLine="true"
                    android:text="123" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/currency_v"
                style="@style/Padding_learning"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content" >

                <TextView
                    android:id="@+id/currency_label_tv"
                    style="@style/Color2_12_Font"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="16dp"
                    android:singleLine="true"
                    android:text="方         向：" />

                <TextView
                    android:id="@+id/currency_tv"
                    style="@style/B12_Font"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="17dp"
                    android:singleLine="true"
                    android:text="人民币" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/D31BALE_v"
                style="@style/Padding_learning"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content" >

                <TextView
                    android:id="@+id/D31BALE_label_tv"
                    style="@style/Color2_12_Font"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="16dp"
                    android:singleLine="true"
                    android:text="余        额：" />

                <TextView
                    android:id="@+id/D31BALE_tv"
                    style="@style/B12_Font"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="752.362.59" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/date_v"
                style="@style/Padding_learning"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content" >

                <TextView
                    android:id="@+id/date_label_tv"
                    style="@style/Color2_12_Font"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="16dp"
                    android:singleLine="true"
                    android:text="记账日期：" />

                <TextView
                    android:id="@+id/date_tv"
                    style="@style/B12_Font"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="2014-11-13" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/D31TELID_v"
                style="@style/Padding_learning"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content" >

                <TextView
                    android:id="@+id/D31TELID_label_tv"
                    style="@style/Color2_12_Font"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="16dp"
                    android:singleLine="true"
                    android:text="操作员号：" />

                <TextView
                    android:id="@+id/D31TELID_tv"
                    style="@style/B12_Font"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="未操作" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/auditState_v"
                style="@style/Padding_learning"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content" >

                <TextView
                    android:id="@+id/auditState_label_tv"
                    style="@style/Color2_12_Font"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="16dp"
                    android:singleLine="true"
                    android:text="复核员号：" />

                <TextView
                    android:id="@+id/auditState_tv"
                    style="@style/B12_Font"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="无状态" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/operate_v"
                style="@style/Padding_learning"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content" >

                <TextView
                    android:id="@+id/operate_label_tv"
                    style="@style/Color2_12_Font"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="16dp"
                    android:singleLine="true"
                    android:text="交易机构  :" />

                <TextView
                    android:id="@+id/operate_tv"
                    style="@style/B12_Font"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="未操作" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>